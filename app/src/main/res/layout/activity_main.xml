<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnBanner"
        android:text="Banner Ads"
        android:layout_height="wrap_content"></Button>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnInterstitial"
        android:text="Interstitial Ads"
        android:layout_height="wrap_content"></Button>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnNative"
        android:text="Native Ads"
        android:layout_height="wrap_content"></Button>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnRewarded"
        android:text="Rewarded Ads"
        android:layout_height="wrap_content"></Button>

</LinearLayout>